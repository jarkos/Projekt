<GridLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#000000"
	    android:columnCount="4"
	    android:orientation="horizontal"
	    android:rowCount="2"
	    tools:context=".Perkusista" >
    
    <ImageButton
        android:id="@+id/snare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="1"
        android:background="@null"
        android:onClick="playSound01"
  		android:src="@drawable/snare1"
        android:tag="6" 
        />

    <ImageButton
        android:id="@+id/floortom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:background="@null"
        android:onClick="playSound01"
        android:src="@drawable/floortom1"
        android:tag="5" 
        />

    <ImageButton
        android:id="@+id/tom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|bottom"
        android:layout_row="1"
        android:background="@null"
        android:onClick="playSound01"
        android:src="@drawable/tom2a"
        android:tag="4" />

    <ImageButton
        android:id="@+id/tom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="left|bottom"
        android:layout_row="1"
        android:background="@null"
        android:onClick="playSound01"
		android:src="@drawable/tom2a"
        android:tag="6"
        
        />

    <ImageButton
        android:id="@+id/ride1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:background="@null"
        android:onClick="playSound01"
        android:src="@drawable/ride1"
        android:tag="1" 
        />
		
    <ImageButton
        android:id="@+id/tom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="0"
        android:background="@null"
        android:onClick="playSound01"
        android:src="@drawable/tom1a"
        android:tag="3" 
        />

    <ImageButton
        android:id="@+id/hi_hat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="right|bottom"
        android:layout_row="0"
        android:background="@null"
        android:onClick="playSound01"
        android:src="@drawable/hi_hat1a"
        android:tag="0" />

    <ImageButton
        android:id="@+id/crash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_row="0"
        android:background="@android:color/background_dark"
        android:onClick="playSound01"
        android:src="@drawable/crash1"
        android:tag="2"         
        />

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:background="@android:color/background_dark"
        android:onClick="showMetronomMenu"
        android:src="@drawable/btn" />

</GridLayout>